<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%=pageTitle%></title>
</head>
<body>
  <header>
    <div>
      <a href="/">Market</a>
      <a href="/products">Products</a>
      <a href="/add-product">Add Product</a>
      <a href="/my-product">My Products</a>
      <a href="/message">Messages</a>
      <form action="/logout" method="post">
        <button type="submit">Logout</button>
      </form>
    </div>
  </header>
  <main>
    <% if (Products.length > 0) { %>
      <% Products.forEach((Product) => { %>
        <article>
          <div><%= Product.title %></div>
          <div>$<%= Product.price %></div>
          <div> <img src="<%= Product.imageUrl %>" alt="<%= Product.title %>" width="300" height="300"> </div>
          <div>
            <a href="/edit-product/<%= Product._id %>?edit=true" class="btn">Edit</a>
            <input type="hidden" value="<%= Product._id %>" name="productId">
            <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
          </div>
        </article>
      <% }) %>
    <% } else { %>
      <h1>No products available!</h1>
    <% } %>
  </main>
  <script src="/js/admin.js"></script>
</body>
</html>
